{
  "name": "mrdps27",
  "version": "1.0.0",
  "description": "Logiciel MRDPS27 - Gestion de stock",
  "author": "Hugo Deodato",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm:start-electron\" \"npm:dev-front\"",
    "start-electron": "electron .",
    "dev-front": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:frontend && electron-builder --win --x64",
    "win": "npm run build"
  },
  "dependencies": {
    "concurrently": "^8.2.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.mrdps.stock",
    "productName": "MRDPS Stock",
    "files": [
      "main.js",
      "package.json",
      "assets/**/*",
      "frontend/dist/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    }
  }
}
